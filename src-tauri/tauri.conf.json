{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "open-pulse",
  "version": "0.4.0",
  "identifier": "com.suaresteban.openpulse",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../ui",
    "devUrl": null
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Open Pulse",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "theme": "Dark",
        "decorations": true,
        "windowEffects": {
          "effects": [ "mica", "blur" ],
          "state": "active"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "windows": {
      "wix": {
        "language": ["es-ES"]
      },
      "nsis": {
        "languages": ["Spanish"]
      }
    },
    "active": true,
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
